<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId" access="global" >
    <aura:handler event="c:ProductCreated" action="{!c.onInit}" />
    <aura:attribute name="filetype" type="List" default="['.png', '.jpg', '.jpeg']" />
    <aura:attribute name="productId" type="String" />
    <aura:if isTrue="{!v.productId}">
        <lightning:card iconName="standard:contact">
            <lightning:fileUpload label="Attach receipt"
            name="fileUploader"
            multiple="true"
            accept="{!v.filetype}"
            recordId="{!v.productId}"
            onuploadfinished="{!c.handleUploadFinished}" />
        </lightning:card>
        <lightning:layout>
            <aura:iteration items="{!v.files}" var="f">  
                <lightning:layoutItem padding="around-small">
                    <div class="custom-box">
                        1</div>
                </lightning:layoutItem>
            </aura:iteration>  

        </lightning:layout>
        <aura:set attribute="else">
            <p>You should first complete the form.</p>
        </aura:set>
    </aura:if>
</aura:component>
